---
import ArrowUpLeft from "../icons/ArrowUpLeft.astro";
import BadgeTech from "../utils/BadgeTech.astro";
import type { Experience } from "../../types/experience";

const { date, title, subtitle, description, link, stack } = Astro.props as Experience;
---

<div
  class="absolute size-3 bg-secondary rounded-full mt-1.5 -start-2 border border-secondary"
>
</div>

<div class="flex">
  <div class="w-2/5">
    <time class="mb-1 text-lg font-normal leading-none text-black">{date}</time>
  </div>
  <div class="w-4/5">
    <h3 class="text-2xl font-semibold text-secondary">
      {title}
    </h3>
    <h4 class="text-xl font-semibold text-black">
      {subtitle}
    </h4>
    <ul class="ml-4 list-disc mb-2">
      {description.map((desc) => <li>{desc}</li>)}
    </ul>
    <div class="flex gap-2">
      {
        stack.map(({ tech, color, icon: Icon }) => (
          <BadgeTech text={tech} color={color}>
            <Icon color="#fff" size="18" />
          </BadgeTech>
        ))
      }
    </div>
    <div class="flex justify-end">
      <!-- TODO REVISAR EL ANCHOR -->
      <a
        href={link}
        ||
        #
        class="inline-flex
             items-center
             text-lg
             font-normal
             text-secondary
             focus:z-10
             cursor-pointer"
        >MÃ¡s <ArrowUpLeft /></a
      >
    </div>
  </div>
</div>
