---
import ArrowUpLeft from "../icons/ArrowUpLeft.astro";
import BadgeTech from "../utils/BadgeTech.astro";
import type { Experience } from "../../types/experience";

const { date, title, subtitle, description, link, stack } =
  Astro.props as Experience;
---

<div
  class="absolute size-3 bg-secondary rounded-full mt-1.5 -start-2 border border-secondary dark:border-secondaryDark dark:bg-secondaryDark"
>
</div>

<div class="flex flex-col md:flex-row">
  <div class="w-2/5">
    <time
      class="mb-1 text-lg font-normal leading-none text-black dark:text-primary"
      >{date}</time
    >
  </div>
  <div class="w-4/5">
    <h3 class="text-2xl font-semibold text-secondary dark:text-secondaryDark">
      {title}
    </h3>
    <h4 class="text-xl font-semibold text-black dark:text-primary">
      {subtitle}
    </h4>
    <ul class="ml-4 list-disc mb-2">
      {description.map((desc) => <li>{desc}</li>)}
    </ul>
    <div class="flex gap-2 flex-wrap sm:flex-nowrap">
      {
        stack.map(({ tech, color, icon: Icon }) => (
          <BadgeTech text={tech} color={color}>
            <Icon color="#fff" size="18" />
          </BadgeTech>
        ))
      }
    </div>
    <div class="flex justify-end">
      <!-- TODO REVISAR EL ANCHOR -->
      <a
        href={link}
        ||
        #
        class="inline-flex
             items-center
             text-lg
             font-normal
             text-secondary
             dark:text-secondaryDark
             focus:z-10
             cursor-pointer"
        >MÃ¡s <ArrowUpLeft /></a
      >
    </div>
  </div>
</div>


