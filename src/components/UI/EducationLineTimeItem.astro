---
import BadgeTech from "../utils/BadgeTech.astro";
import type { Education } from "../../types/education";

const { date, field, institution, description, stack } =
  Astro.props as Education;
---

<div
  class="absolute size-3 bg-secondary rounded-full mt-1.5 -start-2 border border-secondary"
>
</div>

<div class="flex">
  <div class="w-2/5">
    <time class="mb-1 text-lg font-normal leading-none text-black">{date}</time>
  </div>
  <div class="w-4/5">
    <h3 class="text-2xl font-semibold text-secondary">
      {field}
    </h3>
    <h4 class="text-xl font-semibold text-black">
      {institution}
    </h4>
    <ul class="ml-4 list-disc mb-2">
      {description.map((desc) => <li>{desc}</li>)}
    </ul>
    <div class="flex gap-2 flex-wrap">
      {
        stack.map(({ tech, color, icon: Icon }) => (
          <BadgeTech text={tech} color={color}>
            <Icon color="#fff" secondaryColor="#000" size="18" />
          </BadgeTech>
        ))
      }
    </div>
  </div>
</div>
